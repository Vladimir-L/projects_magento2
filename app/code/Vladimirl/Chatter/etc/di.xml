        </arguments>
    </type>

    <virtualType name="Vladimirl\Chatter\Model\ResourceModel\Collection\Grid\ChatCollection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">vladimirl_chatter_chats</argument>
            <argument name="resourceModel" xsi:type="string">Vladimirl\Chatter\Model\ResourceModel\Chat</argument>
        </arguments>
    </virtualType>
    <virtualType name="Vladimirl\Chatter\Model\ResourceModel\Collection\Grid\ChatMessageCollection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">vladimirl_chatter_messages</argument>
            <argument name="resourceModel" xsi:type="string">Vladimirl\Chatter\Model\ResourceModel\ChatMessage</argument>
        </arguments>
    </virtualType>
