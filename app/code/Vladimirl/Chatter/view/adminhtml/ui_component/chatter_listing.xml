<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">chatter_listing.chatter_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>messages_columns</spinner>
        <deps>
            <dep>chatter_listing.chatter_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="chatter_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">message_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Vladimirl_Chatter::listing</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider"
                      name="chatter_listing_data_source">
            <settings>
                <requestFieldName>message_id</requestFieldName>
                <primaryFieldName>message_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <exportButton name="export_button"/>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <title translate="true">Delete Messages</title>
                        <message translate="true">Are you sure you want to delete the selected messages?</message>
                    </confirm>
                    <url path="vladimirl_chatter_message/chatter/delete"/>
                    <type>delete</type>
                    <label translate="true">Delete Messages</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="messages_columns">
        <settings>
            <editorConfig>
                <param name="enabled" xsi:type="boolean">false</param>
            </editorConfig>
        </settings>
        <selectionsColumn name="ids" sortOrder="0">
            <settings>
                <indexField>message_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="message_id" sortOrder="10">
            <settings>
                <filter>textRange</filter>
                <sorting>asc</sorting>
                <label translate="true">Message ID</label>
            </settings>
        </column>
        <column name="author_type" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Author Type</label>
            </settings>
        </column>
        <column name="author_id" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">Author ID</label>
            </settings>
        </column>
        <column name="author_name" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Author Name</label>
            </settings>
        </column>
        <column name="message" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Message</label>
            </settings>
        </column>
        <column name="website_id" component="Magento_Ui/js/grid/columns/select" sortOrder="60">
            <settings>
                <filter>select</filter>
                <options class="Magento\Store\Model\ResourceModel\Website\Collection"/>
                <dataType>select</dataType>
                <label translate="true">Website</label>
            </settings>
        </column>
        <column name="chat_hash" sortOrder="70">
            <settings>
                <filter>text</filter>
                <label translate="true">Chat Hash</label>
            </settings>
        </column>
        <column name="created_at" sortOrder="80">
            <settings>
                <filter>text</filter>
                <label translate="true">Date Created</label>
            </settings>
        </column>
    </columns>
</listing>
