<?php /** @var \Vladimirl\Chatter\Block\Data $block */ ?>
<form id="vladimirl-chatter-form-chatter"
      method="post"
      autocomplete="off"
      action="<?= $block->escapeUrl($block->getUrl('vladimrl_chatter_controller/submit/submit')) ?>"
      data-mage-init='{"vladimirL_chatter_formChatter": {}}'
      onsubmit="return false"
>
    <div id="messages-list">
        <?php /** @var \Vladimirl\Chatter\Model\ChatMessage $massage */ ?>
        <?php foreach (array_reverse($block->getChatMessage()->getItems()) as $massage): ?>
            <ul>
                <li><p><i><?= $massage->getDataByKey('created_at'); ?></i></p></li>
                <li><p><?= $massage->getDataByKey('author_type'); ?></p></li>
                <li><b><?= $massage->getDataByKey('message'); ?></b></li>
            </ul>
        <?php endforeach; ?>
    </div>
    <textarea id="message-input"
              placeholder="<?= $block->escapeHtml(__('Message')) ?>"
              name="text_request"
              data-validate="{required:true}"
    ></textarea>
    <button type="submit" id="send-message-button">
        <?= $block->escapeHtml(__('Send message')) ?></button>
    <button type="button" id="close-chatter-button">
        <?= $block->escapeHtml(__('Close chat')) ?></button>
</form>