<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <container name="vladimirL.chatter">
                <block class="Vladimirl\Chatter\Block\Data"
                       name="vladimirL.chatter.button"
                       template="Vladimirl_Chatter::open_button.phtml"
                       ifconfig="vladimirl_chatter/general/enabled"
                />
                <block class="Magento\Framework\View\Element\Template"
                       name="vladimirL.chatter.formChatter"
                       template="Vladimirl_Chatter::form_chatter.phtml"
                       ifconfig="vladimirl_chatter/general/enabled"
                >
                    <arguments>
                        <argument name="jsLayout" xsi:type="array">
                            <item name="components" xsi:type="array">
                                <item name="formChatter" xsi:type="array">
                                    <item name="component" xsi:type="string">vladimirL_chatter_formChatter</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Vladimirl_Chatter/form_chatter</item>
                                        <item name="action"
                                              xsi:type="url"
                                              path="vladimrl_chatter_controller/submit/submit"
                                        />
                                    </item>
                                </item>
                            </item>
                        </argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
